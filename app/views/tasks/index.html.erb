<div class="container">
  <h1>ToDoリスト</h1>
  <%= button_to 'New', { controller: 'tasks', action: 'new'}, { method: :get} %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= "タスク名" %></th>
        <th><%= "カテゴリー" %></th>
        <th><%= "期限" %></th>
        <th><%= "作成日" %></th>
        <th><%= "更新日" %></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to "#{task.title}", task_path(task) %></td>
        <td><%= task.category %></td>
        <td><%= task.deadline %></td>
        <td><%= task.created_at %></td>
        <td><%= task.updated_at %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), method: :delete %></td>        
      </tr>
    </tbody>
    <% end %>
  </table>
</div>